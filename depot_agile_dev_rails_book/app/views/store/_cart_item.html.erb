<% if cart_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %> 
	<td><%= cart_item.quantity %>&times;</td> 
	<td><%=h cart_item.title %></td> 
	<td class="item-price"><%= number_to_currency(cart_item.price) %></td>
	<td><% form_remote_tag :url => { :action => :remove_cart_item,  :title => cart_item.title } do %> 
		<%= submit_tag "X" %>
	<% end %></td>
	<!--<td><%= link_to "x", :action => :remove_cart_item, :title => cart_item.title %></td>-->
</tr>